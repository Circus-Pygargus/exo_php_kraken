{% extends "base.html.twig" %}

{% block header %}
    <h1 class="text-center m-4">Cr√©ation d'un kraken</h1>
{% endblock %}


{% block main %}
    <main class="container">
        <div class="container-fluid">
            <form action="/kraken/create" method="post">
                <div class="form-group">
                    <label for="kraken-name">Nom du kraken</label>
                    <input type="text" class="form-control" id="kraken-name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="kraken-age">Age du kraken</label>
                    <input type="number" class="form-control" id="kraken-age" name="age" required>
                </div>
                <div class="form-group">
                    <label for="kraken-height">Taille du kraken</label>
                    <input type="number" class="form-control" id="kraken-height" name="height" required>
                </div>
                <div class="form-group">
                    <label for="kraken-weight">Poids du kraken</label>
                    <input type="number" class="form-control" id="kraken-weight" name="weight" required>
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </form>
        </div>
    </main>
{% endblock %}